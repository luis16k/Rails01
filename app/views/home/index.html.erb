<h1>Inicio</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Empleados</th>
      <th scope="col" ></th>
    </tr>
  </thead>

  <tbody>
    <% @sucursals.each do |sucursal| %>
      <tr>
        <td><%= sucursal.nombre %></td>
        <td><%= @empleados.where(sucursal: sucursal ).count %></td>
        <td><%= link_to 'Editar', edit_sucursal_path(sucursal) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
