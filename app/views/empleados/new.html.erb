<h1>Registro Empleado</h1>
<br>
<%= form_for(@empleado) do |f| %>
  <div class="form-group">
    <%= f.label :nombre_completo %>
    <%= f.text_field :nombre_completo, class: 'form-control' %>
   </div>
  <div class="form-group">
    <%= f.label :RFC %><br>
    <%= f.text_field :RFC, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :puesto %><br>
    <%= f.text_field :puesto, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :sucursal_id %><br>
    <select name="empleado[sucursal_id]" id="empleado_sucursal_id" class="form-control">
    <option value="" selected disabled hidden>Seleccionar</option>
    <% @sucursals.each do |sucursal| %>
      <option value= "<%= sucursal.id %>" ><%= sucursal.nombre %></option>
    <% end %>
    </select>
  </div>
  <p>
    <%= f.submit "Guardar", class: 'btn btn-success' %>
  </p>
<% end %>